@model EspacioViewModels.AgregarProductoViewModel

@{
    ViewData["Title"] = "Agregar Producto a Presupuesto";
}

<h2>Agregar Producto al Presupuesto Nro @Model.IdPresupuesto</h2>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-controller="Presupuesto" asp-action="AgregarProducto">

            <input type="hidden" asp-for="IdPresupuesto" />
            <div class="form-group">
                <label asp-for="IdProducto" class="control-label"></label>
                <select asp-for="IdProducto"
                    asp-items="@Model.ListaProductos"
                    class="form-control">
                    <option value="">-- Seleccionar Producto --</option>
                </select>
                <span asp-validation-for="IdProducto" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Detalle"
                    asp-route-idPresupuesto="@Model.IdPresupuesto"
                    class="btn btn-secondary">
                    Volver al Presupuesto
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
 <partial name="_ValidationScriptsPartial" />
}